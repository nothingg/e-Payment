/** RUNNING SEQUENCE**/
drop sequence ROWS_ID;

CREATE SEQUENCE ROWS_ID
START WITH 1
INCREMENT BY 1;

---------------------------------------------

DROP TRIGGER ANYID_Gen_ROWS_Dummy;

CREATE OR REPLACE TRIGGER ANYID_Gen_ROWS_Dummy -- ชื่อ Trigger
BEFORE INSERT ON AnyID_Data_ITMX  --ชื่อ Table
    FOR EACH ROW
    declare
    snt    number(10);
        BEGIN
          SELECT    ROWS_ID.NEXTVAL INTO  snt      -- ชื่อ column ใน table
          FROM   dual;
          
          :new.RowIDs := snt;
          :new.Account_Value :=  rpad('033',14, lpad( snt,11,'0')) ;
        END;                

alter trigger  ANYID_Gen_ROWS_Dummy enable ;


