drop table AnyID_Logs;

create table AnyID_Logs(
    log_id number,
    log_action varchar2(10 char),
    log_data clob,
    created_date date,
    created_user varchar2(10 char),
    created_sol varchar2(20 char),
    constraint log_id_PK primary key (log_id) enable
);

/** RUNNING LOG id**/
drop sequence ANYID_LOGID;

CREATE SEQUENCE ANYID_LOGID
START WITH 1
INCREMENT BY 1;

---------------------------------------------

DROP TRIGGER ANYID_Gen_LogID;

CREATE OR REPLACE TRIGGER ANYID_Gen_LogID -- ชื่อ Trigger
BEFORE INSERT ON AnyID_Logs  --ชื่อ Table
    FOR EACH ROW
    declare
    snt    number(10);
        BEGIN
          SELECT    ANYID_LOGID.NEXTVAL 
          INTO  snt     
          FROM   dual;
          :new.log_id := snt;    -- ชื่อ column ใน table
        END;                

alter trigger  ANYID_Gen_LogID enable ;




